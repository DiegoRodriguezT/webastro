---
import { getCollection } from "astro:content";
import SmallCard from "./SmallCard.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf(),
);
---

<div
	class="m-auto w-[700px] max-w-full pb-4 md:pb-16 md:pt-5 px-5 mb-10"
	id="blog"
>
	<h2 class="text-2xl md:text-3xl lg:text-3xl font-extrabold">Blog</h2>
	<div class="flex flex-col m-auto px-4 mt-4 group">
		{
			posts.map((post) => (
				<SmallCard
					title={post.data.title}
					description={post.data.description}
					href={`/blog/${post.slug}`}
					date={post.data.date}
				/>
			))
		}
	</div>
</div>
