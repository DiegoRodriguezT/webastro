---
import { Image } from "astro:assets";
import avatar from "/src/assets/avatar.jpeg";
---

<header
	class="py-8 m-auto flex flex-col w-3/4 md:flex-row place-items-center justify-between gap-y-4"
>
	<div class="flex flex-row items-center gap-x-4">
		<a href="/"
			><Image
				src={avatar}
				loading="eager"
				class="size-10 rounded-full ring-2 ring-gray-300 transition hover:scale-110"
				alt="diiegorgueez"
			/>
		</a>
		<!-- <span class="text-lg font-semibold">diiegorgueez</span> -->
	</div>

	<nav class="flex flex-row gap-x-4 gap-y-2 font-medium">
		<a href="/" class="transition hover:text-blue-500">Home</a>
		<a href="/#projects" class="transition hover:text-blue-500">Proyectos</a
		>
		<a href="/blog" class="transition hover:text-blue-500">Blog</a>
		<a
			href="mailto:d.rodriguezto.2023@alumnos.urjc.es"
			class="transition hover:text-blue-500">Contact</a
		>
	</nav>
</header>
