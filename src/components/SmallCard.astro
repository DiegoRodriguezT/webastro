---
import FormattedDate from "./FormattedDate.astro";

interface Props {
	title: string;
	description: string;
	href: string;
	date: Date;
	transition: boolean;
}
const { title, description, href, date, transition } = Astro.props;
---

<a href={href}>
	<div
		class="flex flex-col rounded-xl p-4 gap-y-2 border
		 bg-white  hover:bg-gray-100/70 transition-all hover:duration-300 font-medium hover:shadow-md hover:shadow-blue-800/15
		  dark:bg-slate-950 dark:border-gray-800 dark:hover:shadow-slate-900 dark:hover:bg-slate-950 animate"
	>
		<div
			class="flex flex-col md:flex-row md:place-items-center gap-x-4 text-gray-500"
		>
			<h3 class="text-lg md:text-xl font-bold text-black dark:text-white" transition:name={`${title} post`}>{title}</h3>
			<!-- {!transition && <h3 class="text-lg md:text-xl font-bold text-black dark:text-white">{title}</h3>} -->
			<FormattedDate date={date} title={title} />
		</div>
		<p class="text-base md:text-lg" transition:name={`${title} description`}>{description}.</p>
		<span class="text-sm font-mono">Leer más →</span>
	</div>
</a>
