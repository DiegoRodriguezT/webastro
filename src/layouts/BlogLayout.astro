---
const { title, description, image, date } = Astro.props;
import "@fontsource-variable/inter";
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import { ViewTransitions } from "astro:transitions";
import FormattedDate from "../components/FormattedDate.astro";
import Busqueda from "../components/NavBar.astro";
import Layout from "./Layout.astro";


type Props = CollectionEntry<"blog">["data"];

const images = import.meta.glob<{ default: ImageMetadata }>(
	"/src/assets/*.{jpeg,jpg,png,gif}",
);
if (!images[image])
	throw new Error(
		`"${image}" no existe en "src/assets/*.{jpeg,jpg,png,gif}"`,
	);

const apuntes = title == "Apuntes de Matemáticas" ? true : false; // Añadir barra de búsqueda solo en /apuntes.
---

<Layout title={`diiegorgueez - ${title}`} description={description}>
	<div class="m-auto max-w-full px-6 pt-4">
		<Image
			src={images[image]()}
			alt=""
			width="900"
			height="450"
			class="rounded-xl shadow-xl border m-auto mb-10 max-w-full"
			loading="eager"
		/>

		<div
			class="m-auto px-5 max-w-full w-[700px] pb-5 flex-col flex gap-y-6"
		>
			<div class="relative mt-5">
				<div class="absolute -left-24 -top-6">
					<div class="min-h-screen">
						<div
							class="flex flex-col sticky top-0 max-[885px]:hidden"
						>
							<a
								class="w-11 h-11 rounded-full flex items-center justify-center bg-gray-100 hover:bg-[#ecedf0] text-sm leading-6 font-medium text-gray-500 hover:text-gray-700 m-4"
								href="/blog/"
								>←
							</a>
							<button
								class:list={[
									"w-11 h-11 rounded-full flex items-center justify-center bg-gray-100 hover:bg-[#ecedf0] text-sm leading-6 font-medium text-gray-500 hover:text-gray-700 mx-4",
									{ invisible: apuntes ? false : true },
								]}
								id="magnifying-glass"
								><svg
									xmlns="http://www.w3.org/2000/svg"
									width="18"
									height="18"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"
									class="icon icon-tabler icons-tabler-outline icon-tabler-search"
									><path
										stroke="none"
										d="M0 0h24v24H0z"
										fill="none"></path><path
										d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"
									></path><path d="M21 21l-6 -6"></path></svg
								>
							</button>
						</div>
					</div>
				</div>
				<div
					class="flex flex-row place-items-center pb-3 justify-between"
				>
					<h1
						class="text-xl sm:text-2xl md:text-4xl font-extrabold bg-gradient-to-t"
					>
						{title}
					</h1>
					<button
						aria-labelledby="Búsqueda"
						class:list={[
							"md:size-11 sm:size-11 size-10 rounded-full flex items-center justify-center bg-gray-100 hover:bg-[#ecedf0] text-sm leading-6 font-medium text-gray-500 hover:text-gray-700 mx-4 min-[885px]:hidden sticky top-0 r-0 -mr-4",
							{ invisible: apuntes ? false : true },
						]}
						id="magnifying-glass2"
						><svg
							xmlns="http://www.w3.org/2000/svg"
							width="18"
							height="18"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="icon icon-tabler icons-tabler-outline icon-tabler-search"
							><path stroke="none" d="M0 0h24v24H0z" fill="none"
							></path><path
								d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"
							></path><path d="M21 21l-6 -6"></path></svg
						>
					</button>
				</div>
				<div
					class="text-base md:text-lg text-gray-500 font-light text-pretty"
				>
					<span>{description} •</span>
					<FormattedDate date={date} />
				</div>
			</div>
			<slot />
		</div>
	</div>
</Layout>
